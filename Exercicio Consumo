import java.util.Scanner;

public class Exercicio2 {
    public static void main(String[] args) {
        int kmdirigido, litrosConsu, qtdTanques, x;
        float Consumo; //Double e float guardam um número real, float até 6 casas decimais e double até 10.
    Scanner entrada = new Scanner(System.in);
    
    System.out.println("Digite o numero de tanques de combustivel desejado: \nDigite -1 para finalizar.");
        qtdTanques = entrada.nextInt();
    

    for(x = 0; x < qtdTanques; x++){
    
        System.out.println("Digite o numero de quilometros dirigidos: ");
            kmdirigido = entrada.nextInt();
        System.out.println("Digite quantidade de litros consumidos: ");
            litrosConsu = entrada.nextInt();
        Consumo = (float) kmdirigido/litrosConsu;
        System.out.printf("O consumo de combustível é de: %f Litros\n", Consumo);
            }
        
    
    }

}
